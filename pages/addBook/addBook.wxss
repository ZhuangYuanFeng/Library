.newBookInfo{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 30rpx;
}
.imgbox{
  width: 240rpx;
  height: 300rpx;
  border: 2rpx solid #aaa;
  margin: 0 auto;
}
.img{
  width: 100%;
  height: 100%;
  display: block;
}
.upbtnbox{
  width: 240rpx;
  /* border: 2rpx solid #aaa;  */
  margin: 0 auto;
  margin-top: 20rpx;
}
.upbtn{
  font-size: 25rpx;
}
.user-intro{
  width: 750rpx;
}
.typebox{
  /* border-bottom: 2rpx dashed #aaa; */
  text-align: center;
  margin: 50rpx;
}
.radio-group{
  width: 90%;
}
.radio{
  display: inline-block;
  width: 50%;
}
.namebox{
  width: 350rpx;
  font-size: 45rpx;
  padding-bottom: 5rpx;
  margin: 20rpx auto;
  text-align: center;
  border-bottom: 2rpx dashed #aaa;
}
.authorbox{
  width: 350rpx;
  font-size: 45rpx;
  padding-bottom: 5rpx;
  margin: 20rpx auto;
  text-align: center;
  border-bottom: 2rpx dashed #aaa;
}
.introbox{
  width: 600rpx;
  margin: 20rpx auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-left: 2rpx solid #b2b2b2;
  border-right: 2rpx solid #b2b2b2;
}
.btn-are{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.submitbook{
  width: 300rpx;
  height: 100rpx;
  background: #ff0000;
  color: #fcfcfc;
  /* border: 2rpx solid #aaa; */
}
.submitbook:active{
  background: #ae0000;
  color: #f0f0f0;
}