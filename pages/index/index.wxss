/* index.wxss */

.logobox{
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx auto;
}
.logo{
  width: 100%;
  height: 100%;
  display: block;
}
.userInfo{
  /* background-color: #e1e1e1; */
  height: 50rpx;
  border-bottom: 5rpx solid #e1e1e1;
}
.week_title{
  padding-top: 30rpx;
  text-align: center;
  padding-bottom: 20rpx;
  font-size: 25rpx;
  /* border-bottom: 2rpx solid #e1e1e1; */
  background-color: #fafafa;
}
.week_book{
  /* display: flex; */
  white-space: nowrap;
  margin-top: 40rpx;
  width: 100%;
  /* justify-content: space-between; */
  /* flex-direction: row; */
}
.weekBook1{
  
  width: 180rpx;
  height: 300rpx;
  display: inline-block;
  /* background-color: #e1e1e1; */
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.typeBox{
  
  width: 180rpx;
  height: 300rpx;
  display: inline-block;
}
.imgBox{
  width: 180rpx;
  height: 200rpx;
  display: block;
  background-color: #ee1;
}
.hadOut{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
}
.bookimg{
  width: 100%;
  height: 100%;
  display: block;
}
.bookName{
  width: 150rpx;
  height: 100rpx;
  line-height: 100rpx; 
  font-size: 20rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.nav{
  width: 100%;
  margin-bottom: 50rpx;
  /* background-color: #e1e1e1;   */
}
.nav-line{
  display: inline-block; 
  text-align: center;
  width: 50%;
}
.nav-li{
  width: 80%;
  text-align: center;
  border: 2rpx solid #333;
  margin-top: 10rpx;
  border-radius: 25rpx;
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
  background-color: #fff;
  /* color: #006600; */
}
.nav-li:active{
  color: #11cd6e;
  /* background-color: #e6e6e6; */
  border-color: #11cd6e;
}
.nav-li:visited{
  color: #333;
  border-color: #333;
}

.bookTitle{
  padding-top: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  padding-bottom: 20rpx;
  font-size: 25rpx;
  /* border-bottom: 2rpx solid #e1e1e1;  */
  background-color: #fafafa;  
  box-shadow: 5rpx 6rpx -10rpx #e5e5e5;
}
.classify_list{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
  padding-top: 20rpx;
  width: 100%;
  box-shadow: 5rpx 6rpx 10rpx #e5e5e5;
  
}
.yinghao{
  color: #006633;
}
